{
  "name": "@hyperse/translator",
  "version": "1.0.0",
  "description": "Translates messages from the given namespace by using the ICU syntax.",
  "keywords": [
    "hyperse",
    "ICU",
    "translator"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/translator.git"
  },
  "main": "./dist/index.mjs",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "tsup",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "cz": "cz",
    "lint": "eslint .",
    "lint-staged-files": "lint-staged --allow-empty",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "intl-messageformat": "10.5.14"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@hyperse/eslint-config-hyperse": "^1.1.3",
    "@hyperse/ts-node-paths": "^1.0.9",
    "@types/node": "^22.2.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.4.1"
}
